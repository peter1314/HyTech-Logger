<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.peter.wagstaff.hytechlogger">

<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.CAMERA"/>


<application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <activity android:name="com.peter.wagstaff.hytechlogger.activities.LoginPresenter"
        android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <activity
        android:name="com.peter.wagstaff.hytechlogger.activities.MainPresenter"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/SecondAppTheme">
    </activity>

    <activity
        android:name=".activities.scanItemPresenters.ScanCellPresenter"
        android:screenOrientation="portrait"
        android:label="@string/app_name">
    </activity>
    <activity
        android:name=".activities.scanItemPresenters.ScanStockPresenter"
        android:screenOrientation="portrait"
        android:label="@string/app_name">
    </activity>

    <activity
        android:name=".activities.newItemEntryPresenters.NewCellEntryPresenter"
        android:screenOrientation="portrait"
        android:theme="@style/SecondAppTheme"
        android:label="@string/app_name">
    </activity>
    <activity
        android:name=".activities.newItemEntryPresenters.NewStockEntryPresenter"
        android:screenOrientation="portrait"
        android:theme="@style/SecondAppTheme"
        android:label="@string/app_name">
    </activity>

    <activity
        android:name=".activities.viewItemPresenters.ViewCellPresenter"
        android:screenOrientation="portrait"
        android:theme="@style/SecondAppTheme"
        android:label="@string/app_name">
    </activity>
    <activity
        android:name=".activities.viewItemPresenters.ViewStockPresenter"
        android:screenOrientation="portrait"
        android:theme="@style/SecondAppTheme"
        android:label="@string/app_name">
    </activity>

    <activity
        android:name=".activities.viewItemsPresenters.ViewCellsPresenter"
        android:screenOrientation="portrait"
        android:label="@string/app_name"
        android:theme="@style/SecondAppTheme">
    </activity>
    <activity
        android:name=".activities.viewItemsPresenters.ViewStocksPresenter"
        android:screenOrientation="portrait"
        android:label="@string/app_name"
        android:theme="@style/SecondAppTheme">
    </activity>

    <activity
        android:name="com.peter.wagstaff.hytechlogger.activities.SignupPresenter"
        android:screenOrientation="portrait"
        android:label="@string/app_name">
    </activity>

    <activity
        android:name="com.peter.wagstaff.hytechlogger.activities.ResetPasswordPresenter"
        android:screenOrientation="portrait"
        android:label="@string/app_name">
    </activity>

    <activity
        android:name="com.peter.wagstaff.hytechlogger.activities.ProfileActivity"
        android:screenOrientation="portrait"
        android:label="@string/app_name">
    </activity>

</application>

</manifest>