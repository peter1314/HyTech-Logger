<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/scan_button"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16sp"
        android:background="@color/colorPrimary"
        android:text="Scan Cell"
        android:textColor="@color/pure_white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/view_button"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:background="@color/colorPrimary"
        android:text="View Cells"
        android:textColor="@color/pure_white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/scan_button" />

    <ImageButton
        android:id="@+id/profile_imageButton"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="8sp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/default_profile_basic_foreground" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/big_logo_w_h"
        android:layout_height="@dimen/big_logo_w_h"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher_basic_foreground"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>