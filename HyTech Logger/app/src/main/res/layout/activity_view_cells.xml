<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ViewCellsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp"
        android:background="@color/colorPrimaryLight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/rounded_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.peter.wagstaff.hytechlogger.activities.rowinjection.LocationToggleBox
                    android:id="@+id/cabinet_checkbox"
                    android:layout_width="@dimen/filter_check_w"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/loc_button_placeholder"
                    android:textColor="@color/dark_grey" />

                <com.peter.wagstaff.hytechlogger.activities.rowinjection.LocationToggleBox
                    android:id="@+id/ht04_checkbox"
                    android:layout_width="@dimen/filter_check_w"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/loc_button_placeholder"
                    android:textColor="@color/dark_grey" />

                <com.peter.wagstaff.hytechlogger.activities.rowinjection.LocationToggleBox
                    android:id="@+id/ht05_checkbox"
                    android:layout_width="@dimen/filter_check_w"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/loc_button_placeholder"
                    android:textColor="@color/dark_grey" />

                <com.peter.wagstaff.hytechlogger.activities.rowinjection.LocationToggleBox
                    android:id="@+id/other_checkbox"
                    android:layout_width="@dimen/filter_check_w"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/loc_button_placeholder"
                    android:textColor="@color/dark_grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.peter.wagstaff.hytechlogger.activities.rowinjection.MinMaxEditText
                    android:id="@+id/min_voltage_editText"
                    android:layout_width="@dimen/filter_range_input_w"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="@dimen/filter_range_w"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center_horizontal"
                    android:text="@string/voltage_bounds"
                    android:textSize="@dimen/text_size_small" />

                <com.peter.wagstaff.hytechlogger.activities.rowinjection.MinMaxEditText
                    android:id="@+id/max_voltage_editText"
                    android:layout_width="@dimen/filter_range_input_w"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.peter.wagstaff.hytechlogger.activities.rowinjection.MinMaxEditText
                    android:id="@+id/min_capacity_editText"
                    android:layout_width="@dimen/filter_range_input_w"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="@dimen/filter_range_w"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center_horizontal"
                    android:text="@string/capacity_bounds"
                    android:textSize="@dimen/text_size_small" />

                <com.peter.wagstaff.hytechlogger.activities.rowinjection.MinMaxEditText
                    android:id="@+id/max_capacity_editText"
                    android:layout_width="@dimen/filter_range_input_w"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.peter.wagstaff.hytechlogger.activities.rowinjection.MinMaxEditText
                    android:id="@+id/min_ir_editText"
                    android:layout_width="@dimen/filter_range_input_w"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="@dimen/filter_range_w"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center_horizontal"
                    android:text="@string/ir_bounds"
                    android:textSize="@dimen/text_size_small" />

                <com.peter.wagstaff.hytechlogger.activities.rowinjection.MinMaxEditText
                    android:id="@+id/max_ir_editText"
                    android:layout_width="@dimen/filter_range_input_w"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:requiresFadingEdge="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.peter.wagstaff.hytechlogger.activities.rowinjection.CellTableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="10dip"></com.peter.wagstaff.hytechlogger.activities.rowinjection.CellTableLayout>

            </LinearLayout>

            ...

        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>